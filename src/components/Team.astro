---
import * as prismic from '@prismicio/helpers'
import TeamMember from './TeamMember.astro'

const {
  data: { section_team_title, section_team_text, section_team_doctors_list, section_team_admins_list },
} = Astro.props
---

<section class="pt-5 pb-7 sm:py-10 flex flex-col text-neutral-100 bg-primary-500">
  <div class="w-full px-5 mx-auto xl:px-7 max-w-screen-lg xl:max-w-screen-2xl">
    <h2 id="team" class="text-[1.625rem] pb-4 font-black uppercase anchor-offset text-center">
      {section_team_title}
    </h2>
    <div class="font-light xl:text-sm text-neutral-100 mb-5 xs:mb-7 sm:w-3/4 lg:w-1/2 xs:mx-auto text-center">
      <Fragment set:html={prismic.asHTML(section_team_text)} />
    </div>
    <div id="prendre-rendez-vous" class="anchor-offset"></div>
    <div
      class="grid grid-cols-1 gap-y-6 divide-y-[1px] divide-neutral-100 divide-solid mt-4 lg:divide-x-[1px] lg:divide-y-0 lg:grid-cols-2 gap-x-6"
    >
      <ul
        class="col-span-1 flex items-center pt-7 -mt-5 lg:pt-5 justify-between md:justify-evenly flex-col space-y-12 md:space-y-0 md:flex-row"
      >
        {
          section_team_doctors_list.map((member) => (
            <li>
              <TeamMember data={member} isDoctor={true} />
            </li>
          ))
        }
      </ul>
      <ul class="col-span-1 sr-only md:grid md:not-sr-only md:grid-cols-2 md:py-6 lg:pis-6 lg:py-5 gap-y-7">
        {
          section_team_admins_list.map((member) => (
            <li class="col-span-1">
              <TeamMember data={member} isDoctor={false} />
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
