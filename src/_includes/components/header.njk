{%- from "components/cta.njk" import cta -%}
{% set mainNavItems = [
  {
    name: landing.navigation_menu_label_office,
    url: '#le-cabinet'
  },
  {
    name: landing.navigation_menu_label_interventions,
    url: '#les-interventions'
  },
  {
    name: landing.navigation_menu_label_team,
    url: '#equipe'
  },
  {
    name: landing.navigation_menu_label_clinic,
    url: '#la-clinique'
  },
  {
    name: landing.navigation_menu_label_reviews,
    url: '#les-avis'
  }
] %}
<header data-interactive='navbar' class='header transition-all md:max-h-90 z-header sticky top-0 left-0 w-full md:py-0 py-3 surface surface-neutral-100'>
  <div class='relative'>
    <div class='container flex'>
      <a href='/' class='flex-shrink-0 md:mie-8 header-logo'>
          <svg aria-hidden='true' class='w-35 xs:w-70 md:w-120 h-35 xs:h-70 md:h-120 max-w-35 xs:max-w-70 md:max-w-120'>       
            <image class='w-full' xlink:href="{{ landing.header_logo.url}}" />    
          </svg>
        <span class='sr-only'>LeBo Cabinet</span>
      </a>
      <div class='flex md:max-h-90 md:py-3 lg:py-5 flex-grow justify-between items-center'>
        <div 
          id='primary-nav'
          data-interactive='menu-fold'
          aria-expanded='false'
          class='menu-fold z-up transition-all w-full transform overflow-y-auto min-h-screen top-0 left-0 surface surface-neutral-100 md:bg-transparent absolute md:w-auto md:min-h-unset md:static md:block md:flex-shrink-0' 
        >
          <div class='pt-3 container relative flex md:hidden'>
            <span class='heading-1 mx-auto'>Menu</span>
            <button type='button' aria-controls='primary-nav' data-interactive="menu-control" class='cta absolute inline-end-5 top-3 cta--reverse mis-auto'>
              Retour
            </button>
          </div>
          <div
            class='flex overflow-hidden flex-col items-center pt-7 space-y-6 md:pt-0 md:space-y-0 md:flex-row md:justify-evenly md:space-x-6'>
            
            {% for item in mainNavItems %}
              <a aria-controls='primary-nav' data-interactive="menu-control" class='font-sbold text-15 uppercase underline md:no-underline md:normal-case md:text-14 no-underline' href="{{item.url}}">
                {{item.name}}
              </a>
            {% endfor %}
          </div>
        </div>
        {{ cta(landing.navigation_menu_cta_label, '#prendre-rendez-vous', 'flex-shrink-0 inline-flex mis-auto mie-2.5 md:mx-0')}}
        <button aria-controls='primary-nav' data-interactive="menu-control" class='cta cta--reverse md:hidden'>
          Menu
        </button>
      </div>
    </div>
  </div>
</header>